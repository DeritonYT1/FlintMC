plugins {
    id 'java-library'
}

group 'net.flintmc'

sourceCompatibility = 1.8

repositories {
    mavenCentral()
}

labyfy {
}

dependencies {
    annotationProcessor project(':annotation-processing:autoload')
    internalAnnotationProcessor project(':annotation-processing:autoload')

    api project(':util:util-commons')
    api project(':framework:framework-stereotype')
    api project(':framework:framework-inject')
    internalImplementation project(':framework:framework-tasks')
    internalImplementation project(':framework:framework-service')
    internalImplementation project(path: ':framework:framework-inject', configuration: 'internal')
    internalImplementation project(path: ':framework:framework-stereotype', configuration: 'internal')
    internalImplementation 'com.google.code.gson:gson:2.8.6'

    labyfy project(':util:util-commons')
    labyfy project(':framework:framework-stereotype')
    labyfy project(':framework:framework-service')
    labyfy project(':framework:framework-inject')
    labyfy project(path: ':framework:framework-inject', configuration: 'internal')
    labyfy project(path: ':framework:framework-stereotype', configuration: 'internal')
    labyfy 'com.google.code.gson:gson:2.8.6'
}
